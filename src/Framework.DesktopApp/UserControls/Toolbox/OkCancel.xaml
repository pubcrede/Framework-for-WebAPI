<p:ReadOnlyControl    
    x:Class="Framework.UserControls.OkCancel"
    xmlns:p="clr-namespace:Framework.UserControls"    
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Height="60">
        <StackPanel x:Name="StackButtons" Orientation="Horizontal">
            <Button x:Name="ButtonOKControl" Content="OK"  Margin="0,10,0,0"  />
            <Button x:Name="ButtonCancelControl" Content="Cancel" Margin="10,10,0,0" />
        </StackPanel>
        <p:ProgressProcessingRing x:Name="ProgressProcessing" TextProgress="Working" TextSuccess="Success!"/>
    </StackPanel>
</p:ReadOnlyControl>
